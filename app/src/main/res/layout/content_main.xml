<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:background="@android:color/holo_blue_bright"
    tools:context="com.example.abdul.simplecalculator.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/txtNumberOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="NumberOne"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="112dp" />

    <EditText
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtNumber2"
        android:layout_marginBottom="44dp"
        android:layout_toEndOf="@+id/txtNumber2"
        android:layout_toRightOf="@+id/txtNumber2"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="112dp" />

    <EditText
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtNumber2"
        android:layout_alignBottom="@+id/txtNumber2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="206dp" />

    <TextView
        android:id="@+id/txtNumber2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnADD2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="51dp"
        android:text="Number Two"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="206dp" />

    <Button
        android:id="@+id/btnMultiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtSum"
        android:layout_alignLeft="@+id/btnADD2"
        android:layout_alignStart="@+id/btnADD2"
        android:layout_marginBottom="27dp"
        android:text="Multiply"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="376dp" />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Divide"
        tools:layout_editor_absoluteX="241dp"
        tools:layout_editor_absoluteY="368dp"
        android:layout_alignBaseline="@+id/btnMultiply"
        android:layout_alignBottom="@+id/btnMultiply"
        android:layout_alignLeft="@+id/btnSub"
        android:layout_alignStart="@+id/btnSub" />

    <Button
        android:id="@+id/btnADD2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtSum"
        android:layout_alignEnd="@+id/txtNumberOne"
        android:layout_alignRight="@+id/txtNumberOne"
        android:layout_marginBottom="115dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:text="ADD"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="293dp" />

    <EditText
        android:id="@+id/txtSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="434dp" />

    <Button
        android:id="@+id/btnSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtract"
        android:layout_alignBaseline="@+id/btnADD2"
        android:layout_alignBottom="@+id/btnADD2"
        android:layout_alignRight="@+id/txtSum"
        android:layout_alignEnd="@+id/txtSum" />

</RelativeLayout>
